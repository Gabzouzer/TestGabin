// Declarative //
pipeline {
	agent any
	stages {
		stage('Build') {
			steps {
				echo 'Building...'
				bat 'mvn compile'
			}
		}
		stage('Test') {
			steps {
				echo 'Testing...'
				bat 'mvn test'
			}
		}
		stage('Scan') {
			steps {
				withSonarQubeEnv(installationName :'SonarQube'){
					bat 'mvn sonar:sonar' 
				}
			}
		}
	}
}
