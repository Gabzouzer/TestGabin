// Declarative //
pipeline {
	agent any
	stages {
		stage('Build') {
			steps {
				echo 'Building...'
				bat 'mvn compile'
			}
		}
		stage('Test') {
			steps {
				echo 'Testing...'
				bat 'mvn test'
			}
		}
		stage('Scan') {
			steps {
				withSonarQubeEnv(installationName :'SonarQube'){
					bat 'cd TestGabin && mvn sonar:sonar -Dsonar.projectKey=testgabin -Dsonar.organization=my_organization_key -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=my_auth_token' 
				}
			}
		}
	}
}
